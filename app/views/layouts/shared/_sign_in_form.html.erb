<%= form_tag("/sessions", method: :post, id: "sign-in-form") do %>

  <%= text_field_tag "email", nil, autofocus: true, placeholder: "Email", class: "form-control", required: true %>

  <%= password_field_tag "password", nil, autofocus: true, placeholder: "Password", class: "form-control", required: true %>

  <div class="btn-wrapper"><%= submit_tag "Sign In", class: "submit-btn" %></div>

<% end %>

